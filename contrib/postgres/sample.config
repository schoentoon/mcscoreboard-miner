worldpath = /path/to/world/

scoreboard_format = INSERT INTO scoreboard (name, objective, score) VALUES ('%name', '%objective', %score);\n

players_format = INSERT INTO players (name, level, health, food) VALUES ('%username', %xplevel, %health, %food);\n

level_format = INSERT INTO level (daytime, rain, thunder) VALUES (%daytime, %raining, %thundering);\n

stats_useitem_format = INSERT INTO useitems (name, item, uses) VALUES ('%username', %value, %id);\n

stats_mineblock_format = INSERT INTO minedblock (name, block, mined) VALUES ('%username', %id, %value);\n

stats_craftitem_format = INSERT INTO crafteditem (name, item, times) VALUES ('%username', %id, %value);\n

stats_breakitem_format = INSERT INTO breakitem (name, item, times) VALUES ('%username', %id, %value);\n

stats_killentity_format = INSERT INTO kills (name, entity, kills) VALUES ('%username', '%id', %value);\n

stats_killedbyentity_format = INSERT INTO killed_by (name, entity, kills) VALUES ('%username', '%id', %value);\n

stats_format = INSERT INTO stats (name, stat, count) VALUES ('%username', '%id', %value);\n